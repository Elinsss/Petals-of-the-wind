@model Product

<div class="col">
    <div class="card-wrapper">
        <div class="animated-border"></div> <!-- Анимационная рамка -->
        <div class="card product-card h-100 shadow-lg border-0 rounded-4 overflow-hidden">
            <div class="position-relative z-2">
                <img src="@Model.imageurl" class="card-img-top product-image" alt="@Model.name">
                @if (Model.is_hit)
                {
                    <span class="badge bg-danger position-absolute top-0 start-0 m-2 px-3 py-2">🔥 Хит</span>
                }
            </div>
            <div class="card-body text-center d-flex flex-column position-relative z-2">
                <h5 class="card-title text-dark fw-bold">@Model.name</h5>
                <p class="text-primary fs-5 fw-bold">@Model.price руб.</p>
                <p class="text-muted mb-3">🚚 Доставка: @Model.delivery</p>
                <button class="btn btn-gradient flex-grow-1">Купить</button>
            </div>
        </div>
    </div>
</div>


<style>
    /* Обёртка для анимационной рамки */
    .card-wrapper {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 16px;
    }

    /* Анимационная рамка */
    .animated-border {
        position: absolute;
        top: -3px;
        left: -3px;
        width: calc(100% + 6px);
        height: calc(100% + 6px);
        border-radius: 16px;
        background: linear-gradient(45deg, #ff416c, #ff4b2b, #ff416c);
        z-index: 0;
        animation: pulse-border 4s infinite ease-in-out;
    }

    /* Контейнер для равномерного выравнивания */
    .row .col {
        display: flex;
    }



    /* Карточка товара */
    .product-card {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
        max-width: 300px;
        min-height: 250px;
        background: white;
        border-radius: 12px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
        }

    /* Картинка */
    .product-image {
        width: 300px;
        height: 250px;
        object-fit: cover;
        border-radius: 12px 12px 0 0;
    }

    /* Заголовок */
    .card-title {
        min-height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

    /* Выравнивание контента */
    .card-body {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    /* Кнопка */
    .btn-gradient {
        background: linear-gradient(45deg, #ff416c, #ff4b2b);
        color: white;
        border: none;
        padding: 10px;
        border-radius: 10px;
        transition: 0.3s ease-in-out;
        width: 100%;
        margin-top: auto;
    }

        .btn-gradient:hover {
            background: linear-gradient(45deg, #ff4b2b, #ff416c);
            transform: scale(1.05);
        }
</style>